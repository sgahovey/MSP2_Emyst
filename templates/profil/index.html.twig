{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container seance-new-container" style="max-width: 1400px;">
    <div class="row g-4">
        <div class="col-12">
            <div class="seance-new-header">
                <h1 class="seance-new-title">Mon Profil</h1>
                <p class="seance-new-subtitle">Gérez vos informations personnelles</p>
            </div>

            <div class="seance-form-card">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                
                {{ form_start(profilForm, {'attr': {'class': 'form'}}) }}
                    <div class="form-group">
                        {{ form_label(profilForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(profilForm.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(profilForm.email) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(profilForm.name, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(profilForm.name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(profilForm.name) }}
                    </div>
                    
                    <div class="d-flex">
                        <button class="btn btn-primary" type="submit">Enregistrer</button>                           
                    </div>
                {{ form_end(profilForm) }}
            </div>

            <div class="seance-form-card mt-4">
                <h2 class="mb-4">Sécurité</h2>
                
                <div class="form-group">
                    <label for="app_edit_password" class="form-label">Modification du mot de passe</label>
                    <div class="mt-2">
                        <a href="{{ path('app_edit_password') }}" class="btn btn-save-seance">
                            Modifier le mot de passe
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
