{% extends "base.html.twig" %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="app">
    <main class="content">

        <!-- Section KPI -->
        <div class="grid row-3">

            <div class="card kpi">
                <p class="value">{{ total_seances }}</p>
                <p class="muted">Séances totales</p>
            </div>

            <div class="card kpi">
                <p class="value">{{ total_heures }}h</p>
                <p class="muted">Temps cumulé</p>
            </div>

            <div class="card kpi">
                <p class="value">
                    {% if last_seance %}
                        {{ last_seance.dateEntrainement|date("d/m/Y") }}
                    {% else %}
                        -
                    {% endif %}
                </p>
                <p class="muted">Dernière séance</p>
            </div>

        </div>

        <!-- Zone graphs -->
        <div class="grid row-2" style="margin-top:24px;">
            
            <div class="card">
                <h3>Répartition des types de séances</h3>
                <div class="chart-placeholder">
                    Graphique circulaire ici
                </div>
            </div>

            <div class="card">
                <h3>Volume d'entraînement hebdomadaire</h3>
                <div class="chart-placeholder">
                    Graphique en barres ici
                </div>
            </div>

        </div>

        <!-- Dernières séances -->
        <div class="card" style="margin-top:24px;">
            <h3>5 dernières séances</h3>

            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Durée</th>
                    </tr>
                </thead>

                <tbody>
                {% for seance in last_5 %}
                    <tr>
                        <td>{{ seance.dateEntrainement|date('d/m/Y H:i') }}</td>
                        <td>{{ seance.typeSeance }}</td>
                        <td>
                            {% if seance.duree %}
                                {{ seance.duree|date('H:i') }}
                            {% else %} - {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>

    </main>
</div>
{% endblock %}