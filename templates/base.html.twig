                        </a>

                        <a href="{{ path('app_objectif_index') }}"
                        class="nav-item {% if app.current_route starts with 'app_objectif' %}active{% endif %}">
                            <span>Objectifs</span>
                        </a>

                        <a href="{{ path('app_stats') }}"
                        class="nav-item {% if app.current_route starts with 'app_stats' %}active{% endif %}">
                            <span>Statistique</span>
                        </a>

                        <a href="{{ path('app_profil') }}"
                        class="nav-item {% if app.current_route == 'app_profil' %}active{% endif %}">
                            <span>Mon compte</span>
                        </a>

                        <!-- üî• Bouton de d√©connexion -->
